@page
@model TallerRPC.Pages.Accounts.IndexModel

@{
    ViewData["Title"] = "Index";
}
<img src="https://redprogramacioncompetitiva.com/contests/2020/12/images/logoSloganH200V1.png"  width="120" height="200" />
<h1>RPC</h1>

@if(IndexModel.AccountSignedIn){
<form method="post">
    <input type="hidden" asp-for="AccountSigningOut" value="true">
    <input type="submit" value="Sign out" />
</form>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].BirthDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Account)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDay)
                </td>
                <td>
                    
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else{
<div>
    <h2>Sign In</h2>
    <form method="post">
        <label for="usernameTF">UserName: </label>
        <input type="text" asp-for="UserNameAccountToTry">
        <br>
        <label for="passwordTF">PassWord: </label>
        <input type="password" asp-for="AccountPasswordToTry">
        <br>
        <input type="submit" value="Sign In" />
    </form>
    @if (Model.UserNameAccountToTry != null && !IndexModel.AccountSignedIn) {
        <p>Your PassWord or your Username are wrong</p>
    }
    <hr />
    <h2>New User</h2>
    <form method="get" action="/Accounts/Create">
        <button type="submit">Sign Up</button>
    </form>
</div>
}

